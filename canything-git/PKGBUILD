# Maintainer: Gore Liu <goreliu@126.com>

_pkgname=canything
pkgname=$_pkgname-git
pkgver=20130128.22
pkgrel=1
pkgdesc="CUIでEmacs anythingを使うコマンド"
url="https://github.com/keiji0/canything"
arch=('i686' 'x86_64')
license=('MIT')
makedepends=('ncurses-devel')
source=("$_pkgname::git+https://github.com/keiji0/$_pkgname.git")
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  echo "$(git log -1 --format="%cd" --date=short | sed 's|-||g').$(git rev-list --count master)"
}

build() {
  cd "$srcdir/$_pkgname"
  sed -i 's|ncurses.h|ncurses/ncurses.h|g' canything.c
  sed -i 's|-lpdcurses|-lncurses|g' Makefile
  make
}

package() {
  cd "$srcdir/$_pkgname"
  install -Dm0755 "$_pkgname.exe" "$pkgdir/usr/bin/$_pkgname.exe"
}
